{
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "declaration": true /* 生成相关的 '.d.ts' 文件。 */,
    // declarationDir 已被 vite-plugin-dts 接管，生成到 dist/entry.d.ts
    // "declarationDir": "./dist/types" /* '.d.ts' 文件输出目录 */,
    "jsx": "preserve",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "rootDir": "./",
    "paths": {
      "@/*": ["src/*"],
      "@utils/*": ["utils/*"],
      "@enums/*": ["enums/*"],
      "@ftypes/*": ["ftypes/*"],
      "@fstyles/*": ["styles/*"],
    },
    "types": ["unplugin-vue-define-options/macros-global"]
  },
  "include": ["./**/*.*", "./src/shims-vue.d.ts","./utils/**/*.*"],
  "exclude": ["node_modules","dist","demo"],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true
}
